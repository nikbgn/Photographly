@model PostServiceModel



<div class="col-lg-12">
	<div class="card border-secondary shadow-sm">
		<img src="data:image;base64,@Convert.ToBase64String(Model.PostImage)" class="card-img-top" alt="Post image.">
		<div class="card-body d-flex flex-column">
			<h4>@Model.Title</h4>
			<p class="card-text" style="white-space: nowrap; text-overflow: ellipsis; overflow:hidden;">
				@Model.Description
			</p>
			<div>

				<p class="text-muted">
					Date: @Model.CreatedOn
				</p>
				<p class="text-muted">
					Likes: @Model.LikesCount
				</p>
			</div>
				<div>
					<form method="get">
						<button type="submit" class="btn btn-outline-primary mt-auto" asp-route-postId="@Model.Id" asp-controller="Home" asp-action="LikePost">Like 💖</button>
						<button type="submit" class="btn btn-outline-primary mt-auto" asp-route-postId="@Model.Id" asp-controller="Home" asp-action="ViewPost">Comment 🌠</button>
						<button type="submit" class="btn btn-outline-primary mt-auto" asp-route-postId="@Model.Id" asp-controller="Home" asp-action="ViewPost">View 🌟</button>
					</form>
				</div>
			<div>
			</div>
		</div>
	</div>
</div>