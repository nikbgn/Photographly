@model IEnumerable<PostServiceModel>
@{
	ViewData["Title"] = "My Posts";
}

<div class="album py-5 push">
	<div class="container text-center">
		@if (!Model.Any())
		{
			<h1>You don't have any posts yet! Create one? 📸</h1>
			<div>
				<form asp-area="Photography" asp-controller="Home" asp-action="Add" method="get">
				<input type="submit" class="btn btn-lg btn-success m-1 text-white" value="Create one📸" />
				</form>
			</div>
		}
		else
		{
			<div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 g-4">


				@foreach (var post in Model)
				{
					<partial name="_MyPostsPartial" model="@post" />
				}
			</div>
		}

	</div>
</div>
