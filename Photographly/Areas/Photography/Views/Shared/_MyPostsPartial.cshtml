@model PostServiceModel



<div class="col">
	<div class="card border-secondary shadow-sm">
		<img src="data:image;base64,@Convert.ToBase64String(Model.PostImage)" class="card-img-top" alt="Post image thumbnail.">
		<div class="card-body">
			<h4>@Model.Title</h4>
			<p class="card-text" style="white-space: nowrap; text-overflow: ellipsis; overflow:hidden;">
				@Model.Description
			</p>
			<p class="text-muted">
				@Model.CreatedOn
			</p>
			<p class="text-muted">
				Likes: @Model.LikesCount
			</p>
			<div>
				<form method="get">
					
					<input type="submit" class="btn btn-sm btn-outline-success m-1" value="View your post 🔥" asp-route-postId="@Model.Id" asp-area="" asp-controller="Home" asp-action="ViewPost" />
					<input type="submit" class="btn btn-sm btn-outline-primary m-1" value="Edit ✏️" asp-route-postId="@Model.Id" asp-area="Photography" asp-controller="Home" asp-action="EditPost" />
					<input type="submit" class="btn btn-sm btn-outline-danger m-1" value="Delete ❌" asp-route-postId="@Model.Id" asp-area="Photography" asp-controller="Home" asp-action="Delete" />
				</form>
			</div>
			<div>
			</div>
		</div>
	</div>
</div>